@page
@model CreateStudentModel
@{
}


<form method="post">

    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for=Student.FirstName></label>
        <input asp-for=Student.FirstName>
    </div>

    <div>
        <label asp-for=Student.LastName></label>
        <input asp-for=Student.LastName>
    </div>

    <div>
        <label asp-for=Student.StudentID></label>
        <input asp-for=Student.StudentID>
    </div>

    <fieldset>
        <legend>What Subjects do you wish to study?</legend>
        <ul>
            @for (int i = 0; i < Model.Student.SubjectChoices.Length; i++)
            {
                <li>
                    <input asp-for="Student.SubjectsPicked[i]" />
                    <label asp-for="Student.SubjectsPicked[i]">@Model.Student.SubjectChoices[i]</label>
                </li>
            }
        </ul>
    </fieldset>
    <button type="submit">Press Me</button>
</form>


