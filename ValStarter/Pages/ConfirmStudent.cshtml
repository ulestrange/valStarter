@page
@model ValStarter.Pages.ConfirmStudentModel
@{
}


<h1> This is the confirm page</h1>

<h2>The following values were entered</h2>
<ul>
    <li> Student Name @Model.Student.FirstName </li>
    <li> Student Last Name @Model.Student.LastName </li>
    <li> Student ID @Model.Student.StudentID </li>
    <li>
        Subjects Picked
        <ol>
            @for (int i = 0; i < Model.Student.SubjectChoices.Length; i++)
            {
                @if (Model.Student.SubjectsPicked[i])
                {
                    <li>
                        @Model.Student.SubjectChoices[i]
                    </li>
                }
            }
        </ol>

    </li>
</ul>

<a href="CreateStudent" class="button">Go Back and Edit</a>

<a href="Bye" class="button">Save the Data</a>

