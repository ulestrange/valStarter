@page
@model CreateStudentModel
@{
}


<form method="post">

    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for=Student.FirstName></label>
        <input asp-for=Student.FirstName>
    </div>

    <div>
        <label asp-for=Student.LastName></label>
        <input asp-for=Student.LastName>
    </div>

    <div>
        <label asp-for=Student.StudentID></label>
        <input asp-for=Student.StudentID>
    </div>
    <fieldset>
        <legend> What subjects?</legend>

        <div>
            <input asp-for=Student.TakesSpanish>
            <label asp-for=Student.TakesSpanish></label>
        </div>
        <div>
            <input asp-for=Student.TakesFrench>
            <label asp-for=Student.TakesFrench></label>
        </div>
        <div>
            <input asp-for=Student.TakesGerman>
            <label asp-for=Student.TakesGerman></label>
        </div>
    </fieldset>
    <button type="submit">Press Me</button>
</form>


